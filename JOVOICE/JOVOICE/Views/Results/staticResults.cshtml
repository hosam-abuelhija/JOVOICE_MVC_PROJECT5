@section stylesheet
    {
    <style>

        main {
            direction: rtl;
        }

        * {
            color: black !important;
        }

        h1 {
            font-size: 30px;
            color: #fff;
            text-transform: uppercase;
            font-weight: 300;
            text-align: center;
            margin-bottom: 15px;
        }

        table {
            width: 100%;
            table-layout: fixed;
            border: 0.1em solid black;
            border-collapse: collapse !important;
            text-align: center !important;
            direction: rtl !important;
        }

        .tbl-header {
            background-color: rgba(0, 56, 102, 0.3);
            width: 100%;
            padding-right: 0 !important;
            margin: 0 !important;
            text-align: center !important;
            direction: rtl !important;
        }

        thead {
            background-color: rgba(0, 56, 102, 0.2);
        }


        .tbl-content {
            height: 25em;
            overflow-x: auto;
            margin-top: 0px;
            border: 1px solid rgba(255,255,255,0.3);
            margin: 0 !important;
            text-align: center !important;
            direction: rtl !important;
        }

        th {
            padding: 20px 15px !important;
            text-align: left;
            font-weight: 500 !important;
            color: #fff;
            text-transform: uppercase;
            text-align: center !important;
            direction: rtl !important;
            font-size: 1em !important;
        }

        td {
            padding: 15px !important;
            text-align: left;
            vertical-align: middle;
            font-weight: 300 !important;
            color: #fff;
            border-bottom: solid 1px rgba(255,255,255,0.1);
            text-align: center !important;
            direction: rtl !important;
            font-size: 1em !important;
        }

            td:hover {
                background-color: rgba(224, 36, 84, 0.2);
            }


        /* demo styles */

        section {
            margin: 50px;
        }


        /* for custom scrollbar for webkit browser*/

        ::-webkit-scrollbar {
            width: 6px;
        }

        ::-webkit-scrollbar-track {
            -webkit-box-shadow: inset 0 0 6px rgba(0,0,0,0.3);
        }

        ::-webkit-scrollbar-thumb {
            -webkit-box-shadow: inset 0 0 6px rgba(0,0,0,0.3);
        }


        /* Title Style*/

        .resultsPageTitleContainer {
            position: relative;
            display: inline-block;
            text-transform: uppercase;
            color: var(--bs-primary);
        }

            .resultsPageTitleContainer::before {
                content: "";
                width: 100px;
                position: absolute;
                bottom: 50%;
                left: 0;
                transform: translateY(-50%);
                margin-bottom: -6px;
                margin-left: -100px;
                border: 1px solid var(--bs-secondary);
            }

            .resultsPageTitleContainer::after {
                content: "";
                width: 50px;
                position: absolute;
                top: 50%;
                left: 0;
                transform: translateY(-50%);
                margin-top: -8px;
                margin-left: -50px;
                border: 1px solid var(--bs-primary) !important;
            }

        .resultsPageTitle {
            font-size: 3em !important;
            color: black !important;
        }

        .resultsContainer {
            display: flex !important;
            justify-content: center !important;
            width: 100% !important;
            margin-bottom: 1.5em;
        }

        @@media only screen and (max-width: 426px) {
            .resultsPageTitleContainer::after, .resultsPageTitleContainer::before, .resultsPageTitle::after, .resultsPageTitle::before {
                display: none !important;
            }

            .resultsPageTitle {
                text-align: center !important;
            }
        }

    </style>
}


@section scripts
{
    <script>

        // '.tbl-content' consumed little space for vertical scrollbar, scrollbar width depend on browser/os/platfrom. Here calculate the scollbar width .
        $(window).on("load resize ", function () {
            var scrollWidth = $('.tbl-content').width() - $('.tbl-content table').width();
            $('.tbl-header').css({ 'padding-right': scrollWidth });
        }).resize();

    </script>
}

